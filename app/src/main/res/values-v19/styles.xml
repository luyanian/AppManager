<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:windowBackground">@color/app_main_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/app_main_color</item>
    </style>
    <style name="radioStyleForSale">
        <item name="android:button">@null</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@drawable/check_main_txtcolor</item>
        <item name="android:gravity">center</item>

    </style>
</resources>
